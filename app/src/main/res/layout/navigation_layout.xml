<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_navigation"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="70sp"
    android:background="@drawable/navigation"
    android:layout_gravity="bottom">

    <LinearLayout
        android:id="@+id/main_home"
        android:layout_width="0sp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_home_p"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_gravity="top|center"
            android:layout_marginBottom="7sp"
            android:layout_marginTop="7sp"
            android:src="@drawable/zhuye" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:gravity="center"
            android:text="主页" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_music"
        android:layout_width="0sp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_music_p"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_gravity="top|center"
            android:layout_marginBottom="7sp"
            android:layout_marginTop="7sp"
            android:src="@drawable/yinyue_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:gravity="center"
            android:text="音乐" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_mood"
        android:layout_width="0sp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_mood_p"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_gravity="top|center"
            android:layout_marginBottom="7sp"
            android:layout_marginTop="7sp"
            android:src="@drawable/xinqing_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:gravity="center"
            android:text="心情" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_personal"
        android:layout_width="0sp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_personal_p"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_gravity="top|center"
            android:layout_marginBottom="7sp"
            android:layout_marginTop="7sp"
            android:src="@drawable/geren_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:gravity="center"
            android:text="个人" />
    </LinearLayout>

</LinearLayout>