                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:id="@+id/main_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/photo"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>
            <!-->
