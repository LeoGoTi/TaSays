<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/grey50"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/whatever2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/song_item_songname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="梵谷的左耳"
                android:textSize="16sp"
                android:textColor="@color/grey800"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/song_item_singername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿沁"
                android:textSize="16sp"
                android:textColor="@color/grey800"/>

        </LinearLayout>

        <TextView
            android:id="@+id/song_item_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="梵谷的左耳"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/whatever2"/>

        <ImageView
            android:id="@+id/song_item_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:src="@drawable/share"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <ImageView
        android:id="@+id/song_item_listen"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="14dp"
        android:src="@drawable/listen"
        android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/song_item_share"
            android:layout_toStartOf="@id/song_item_share"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>