<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_mood_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey200"
    android:fitsSystemWindows="true">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/search" >
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:hint="搜索心情/时间/内容"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@drawable/mirror"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:layout_marginTop="55dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mood0"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/happy"

                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="85dp"
                    android:layout_marginLeft="85dp"/>
                <LinearLayout
                    android:id="@+id/line0"
                    android:layout_width="5dp"
                    android:layout_height="130dp"
                    android:layout_below="@id/mood0"
                    android:background="@color/blue300"
                    android:layout_marginLeft="119dp">
                </LinearLayout>
                <ImageView
                    android:id="@+id/mood1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/sad"


                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="85dp"
                    android:layout_marginLeft="85dp"
                    android:layout_below="@id/line0"/>
                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="5dp"
                    android:layout_height="130dp"
                    android:layout_below="@id/mood1"
                    android:background="@color/blue300"
                    android:layout_marginLeft="119dp">
                </LinearLayout>
                <ImageView
                    android:id="@+id/mood2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/happy"

                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="85dp"
                    android:layout_marginLeft="85dp"
                    android:layout_below="@id/line1"/>
                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="5dp"
                    android:layout_height="130dp"
                    android:layout_below="@id/mood2"
                    android:background="@color/blue300"
                    android:layout_marginLeft="119dp">
                </LinearLayout>
                <ImageView
                    android:id="@+id/mood3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/calm"

                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="85dp"
                    android:layout_marginLeft="85dp"
                    android:layout_below="@id/line2"/>
                <LinearLayout
                    android:id="@+id/line3"
                    android:layout_width="5dp"
                    android:layout_height="130dp"
                    android:layout_below="@id/mood3"
                    android:background="@color/blue300"
                    android:layout_marginLeft="119dp">
                </LinearLayout>
                <ImageView
                    android:id="@+id/mood4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/sad"

                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="85dp"
                    android:layout_marginLeft="85dp"
                    android:layout_below="@id/line3"/>
                <LinearLayout
                    android:id="@+id/line4"
                    android:layout_width="5dp"
                    android:layout_height="130dp"
                    android:layout_below="@id/mood4"
                    android:background="@color/blue300"
                    android:layout_marginLeft="119dp">
                </LinearLayout>
                <ImageView
                    android:id="@+id/mood5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/happy"

                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="85dp"
                    android:layout_marginLeft="85dp"
                    android:layout_below="@id/line4"/>
                <LinearLayout
                    android:id="@+id/line5"
                    android:layout_width="5dp"
                    android:layout_height="130dp"
                    android:layout_below="@id/mood5"
                    android:background="@color/blue300"
                    android:layout_marginLeft="119dp">
                </LinearLayout>
                <ImageView
                    android:id="@+id/mood6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/sad"

                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="85dp"
                    android:layout_marginLeft="85dp"
                    android:layout_below="@id/line5"/>
                <LinearLayout
                    android:id="@+id/line6"
                    android:layout_width="5dp"
                    android:layout_height="130dp"
                    android:layout_below="@id/mood6"
                    android:background="@color/blue300"
                    android:layout_marginLeft="119dp">
                </LinearLayout>
                <ImageView
                    android:id="@+id/mood7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/calm"

                    android:layout_marginTop="3dp"
                    android:layout_marginStart="85dp"
                    android:layout_marginLeft="85dp"
                    android:layout_below="@id/line6"
                    android:layout_marginBottom="75dp"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mood0"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12月7日"
                        android:textSize="17sp"
                        android:layout_margin="5dp" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mood1"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11月30日"
                        android:textSize="17sp"
                        android:layout_margin="5dp" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mood2"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11月27日"
                        android:textSize="17sp"
                        android:layout_margin="5dp" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mood3"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11月20日"
                        android:textSize="17sp"
                        android:layout_margin="5dp" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mood4"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11月14日"
                        android:textSize="17sp"
                        android:layout_margin="5dp" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mood5"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11月13日"
                        android:textSize="17sp"
                        android:layout_margin="5dp" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mood6"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11月5日"
                        android:textSize="17sp"
                        android:layout_margin="5dp" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mood7"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10月6日"
                        android:textSize="17sp"
                        android:layout_margin="5dp" />
                </FrameLayout>

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>