<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/grey50"
    app:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_item_port"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/user_default"
            android:layout_margin="5dp"/>
        <RelativeLayout
            android:id="@+id/comment_item_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/comment_item_port"
            android:layout_toEndOf="@id/comment_item_port"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/comment_item_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="用户"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/comment_item_gender"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/gender1"
                android:layout_margin="3dp"
                android:layout_toRightOf="@id/comment_item_nickname"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/comment_item_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/share"
                android:layout_margin="10dp"/>
            <!-->
            <ImageView
                android:id="@+id/comment_item_love"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@+id/comment_item_share"
                android:layout_toStartOf="@+id/comment_item_share"
                android:src="@drawable/love"
                android:layout_margin="10dp"/>
            <!-->
            <com.ldoublem.thumbUplib.ThumbUpView
                android:id="@+id/comment_item_love"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/comment_item_share"
                android:layout_toStartOf="@+id/comment_item_share"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/comment_item_listen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/comment_item_love"
                android:layout_toStartOf="@id/comment_item_love"
                android:src="@drawable/listen"
                android:layout_margin="10dp"/>


        </RelativeLayout>
        <TextView
            android:id="@+id/comment_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/comment_item_port"
            android:layout_toEndOf="@id/comment_item_port"
            android:layout_below="@id/comment_item_rl"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:text="来自云村"
            android:textColor="@color/grey400"/>
        <TextView
            android:lineSpacingMultiplier="1.5"
            android:id="@+id/comment_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_item_time"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="看着《神秘巨星》我仿佛在直面我的恐惧，在家暴中长大的女主角，仿佛就是曾经那个家暴中长大的我。因为家庭的压抑和难过，成为对周遭人物的坏脾气。女主的每一首歌，都让我感动。唱出来的对生活的彷徨，对母亲的爱，旋律优美，却又无尽感伤。女主对母亲的怒火，我感同身受。我明确的知道那愤怒的来源。"
            android:textColor="@color/grey700" />
        <TextView
            android:id="@+id/comment_item_songinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_item_content"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:text="在 xxxx-xxxx后的热评"
            android:textColor="@color/black_overlay"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>