
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comment_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue200"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp">



    <TextView
        android:id="@+id/main_item_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="想给他吃颗糖
于是买了一大把糖
大费周章得每个人都给一颗
只剩最后一颗的时候
才漫不经心的冲他摊开手：
喂，你吃不吃？"
        android:gravity="center"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/comment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T@原来是奤奤啊"
        android:textColor="#4040f0"
        android:layout_below="@id/main_item_comment"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在 小半-陈粒 后的热评"
        android:layout_below="@id/comment_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"

        />
</RelativeLayout>